<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="userDao" class="dao.UserDao">
        <property name="jdbcContext" ref="jdbcContext"></property>
    </bean>

    <bean id="connectionMaker" class="connection.SimpleConnectionMaker"></bean>

    <bean id="jdbcContext" class="context.JdbcContext">
        <constructor-arg ref="connectionMaker"></constructor-arg>
    </bean>

</beans>